<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/textView"
    android:background="#ff00d0ff"
    android:padding="105dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="V.I.P. Behind-The-Scenes"
        android:id="@+id/viptitle"
        android:textSize="35dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/Meet_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cage Cleaning"
        android:typeface="sans"
        android:clickable="true"
        android:textSize="35dp"
        android:background="#ff000000"
        android:textColor="#ff4bff00"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <Button
        android:id="@+id/Diet_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Diet Here At The Museum"
        android:typeface="sans"
        android:clickable="true"
        android:textSize="30dp"
        android:background="#ff000000"
        android:textColor="#ff4bff00"
        android:layout_above="@+id/Activities_In_The_Wild"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="190dp"/>

    <Button
        android:id="@+id/Activities_In_The_Wild"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Caretaker Interaction"
        android:typeface="sans"
        android:clickable="true"
        android:textSize="35dp"
        android:background="#ff000000"
        android:textColor="#ff4bff00"
        android:layout_centerVertical="true"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/Anatomy_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Daily Life"
        android:typeface="sans"
        android:clickable="true"
        android:textSize="35dp"
        android:background="#ff000000"
        android:textColor="#ff4bff00"
        android:layout_below="@+id/Activities_In_The_Wild"
        android:layout_marginTop="60dp" />

</RelativeLayout>
